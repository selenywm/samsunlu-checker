<body>
  <div class="container">
    <h1>Samsunlu Musun?</h1>
    <p>Annenizin ve babanızın memleketini girin:</p>
    <input type="text" id="anneil" placeholder="Annenizin memleketi">
    <input type="text" id="babail" placeholder="Babanızın memleketi">
    <br>
    <button onclick="checkSamsun()">Kontrol Et</button>
    <div id="result"></div>
  </div>

  <script>
    function checkSamsun() {
      const anneil = document.getElementById('anneil').value.toLowerCase();
      const babail = document.getElementById('babail').value.toLowerCase();
      const resultDiv = document.getElementById('result');

      if (anneil === 'samsun' || babail === 'samsun') {
        resultDiv.textContent = "Tebrikler! Samsunlusunuz.";
        resultDiv.style.color = "green";
      } else {
        resultDiv.textContent = "Maalesef kuzeyin kralı Samsunsporlu olmaya hak kazanamadınız.";
        resultDiv.style.color = "red";
      }
    }
  </script>
</body>
